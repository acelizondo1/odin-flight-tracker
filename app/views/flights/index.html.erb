<div class="columns">
    <div class="column is-three-fifths is-offset-one-fifth">
        <div id="flight_search_form">
            <h3 class="is-size-3 has-text-black is-justify-content-center has-text-weight-bold">Search For Flights</h3>
            <br />
            <%= form_with url: root_path, method: :get do |form| %>

                <div class="actions">

                    <div class="field is-horizontal columns">
                        <div class="field-label is-medium column is-1 is-align-self-center">
                            <%= form.label 'From', class: 'label' %>
                        </div>
                        <div class="field-body column is-4">
                            <div class="field is-narrow">
                                <div class="control">
                                    <div class="select is-fullwidth">
                                        <%= select_tag(:from_airport_id, options_for_select(@from_airport)) %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="field-label is-medium column is-1 is-align-self-center">
                            <%= form.label 'To', class: 'label' %>
                        </div>
                        <div class="field-body column is-4">
                            <div class="field is-narrow">
                                <div class="control">
                                    <div class="select is-fullwidth">
                                        <%= select_tag(:to_airport_id, options_for_select(@to_airport)) %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="field is-horizontal columns">
                        <div class="field-label is-medium column is-2 is-align-self-center">
                            <%= form.label 'Passengers', class: 'label' %>
                        </div>
                        <div class="field-body column is-2">
                            <div class="field is-narrow">
                                <div class="control">
                                    <div class="select is-fullwidth">
                                        <%= select_tag(:passengers, options_for_select([[1,1],[2,2],[3,3],[4,4]])) %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    
                            <div class="field-label is-medium column is-1 is-offset-2 is-align-self-center">
                                <%= form.label :date, class: 'label' %>
                            </div>
                            <div class="field-body column is-3">
                                <div class="field">
                                    <div class="control">
                                        <div class="select">
                                            <%= select_tag(:date, options_for_select(@departure_times))%>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        
                    </div>
                    
                    <br />
                    <%= form.submit 'Search', class: 'button is-info is-normal' %>
                </div>
            <% end %>
        </div>

        <div id="flight_search_results">
            <% if @search_submit == true %>
                <%= render 'flight_search_results' %>
            <% end %>
        </div>
    </div>
</div>